<article class="article">
	<div class="article__image-holder"><img src="{{ image }}" class="article__image" /></div>
	<div class="article__add-comment"><i class="icon icon_comment icon_comment_dark icon_comment_add"></i></div>
	<h2 class="article__title">{{ title }}</h2>
	<h3 class="article__author">{{ author.name }}, {{{ format_date date }}}</h3>
	{{{ content }}}
</article>