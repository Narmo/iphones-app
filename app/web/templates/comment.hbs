<div class="comment" data-comment-id="{{ id }}">
	<div class="comment__h">
		<span class="comment__avatar">{{#if hash}}<img src="http://www.gravatar.com/avatar/{{ hash }}?s=50" class="comment__avatar-img" />{{/if}}</span>
		<h3 class="comment__author">{{ author.name }}</h3>
		<p class="comment__date">{{ date }}</p>
	</div>
	<div class="comment__content">{{{ content }}}</div>
	{{#each children}}
		{{renderComment .}}
	{{/each}}
</div>